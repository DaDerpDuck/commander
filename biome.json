{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"files": {
		"ignore": ["./package.json"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	}
}
